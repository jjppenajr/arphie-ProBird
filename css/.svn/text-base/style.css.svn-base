#nav-bar{
	width: 100%;
	height: 100%;
	float: left;
  vertical-align: middle;


}

#nav{
  list-style: none;
  margin: 0;
  padding: 0;
  width: 100%;
  height: 100%;
  vertical-align: middle;
  line-height: 250%;

}
#nav li{
	list-style: none;
	background-color: #4C463D; 
	height: 12.4%;
	font-family: Arial;
  vertical-align: middle;

}
#nav li.selected{

  	background-color: #3c6516;
}
#nav li.selected a{
	color:white;
}
#nav li:hover a{
	color: white;
	background: #3c6516;
}
#nav a{
  border-bottom: 1px solid #393939;
  color: white;
  display: block;
  margin: 0;
  padding: 0px 20px;
  text-decoration: none;
  font-weight: bold;
  height: 100%;
  transition: background-color 0.5s ease;
  vertical-align: middle;
}
#nav a:hover {
  background: #e3f9ed;
  line-height: 250%;
  color: black;
}
